{
  "openapi": "3.0.0",
  "info": {
    "title": "Arithmetic Calculator REST API",
    "description": "API for performing certain mathematical operations, this a TRUENORTH Code Challenge",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001"
    }
  ],
  "tags": [
    {
      "name": "operations",
      "description": "Manage all operations"
    },
    {
      "name": "records",
      "description": "Manage all records"
    }
  ],
  "paths": {
    "/add": {
      "post": {
        "tags": [
          "operations"
        ],
        "summary": "Perform addition",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": {
                    "type": "number"
                  },
                  "numbers": {
                    "type": "object"
                  }
                },
                "example": {
                  "userId": 1,
                  "numbers": [
                    10,
                    3
                  ]
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful addition",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "result": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
